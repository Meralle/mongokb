extends layout

block content
	h1 #{title}
	form(method='POST', action='/articles/add')
		br
		#form-group
			label Title:
			input.form-control(name='title', type='text')
		br
		#form-group
			label Author:
			input.form-control(name='author', type='text')
		br
		#form-group
			label body:
			textarea.form-control(name='body')
		br
		input(type='submit', value='Submit').btn.btn-success